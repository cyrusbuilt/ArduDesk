Bridge mqtt:broker:mosquitto "MQTT Broker Mosquitto" @ "MQTT" [
	// Modify these settings as needed to match your broker.
	host="localhost",
	port=1883,
	secure=false,
	clientId="openhab3",
	qos=0,
	retain=false,
	keep_alive_time=30000,
	reconnect_time=60000,
	// Can also add username and password here if needed, otherwise omit.
	username="your_mqtt_username_here",
	password="your_mqtt_password_here"
]